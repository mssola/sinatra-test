<!doctype html>
<html>
<head>
  <title>Leaky</title>
  <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <%= css :app, :media => 'screen' %>
  <%= js  :app %>
</head>

<body>
  <div class="wrapper">
    <header>
      <div class="logo">
        <a href="http://localhost:3000/"><img src="images/logo.png" border="0" /></a>
      </div>
      <nav class="menu">
        <% if current_user %>
          <% gra = get_gravatar_of(current_user.email) %>
          <li><a href="/"><img src="<%= gra %>" height="20" /></a></li>
          <li><a href="/logout">Log out</a></li>
        <% end %>
        <li><a href="/">Home</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/snippets">Code Snippets</a></li>
        <li><a href="/contact">Contact</a></li>
      </nav>
    </header>
  </div>
  <div class="wrapper">
    <div id="flash_container">
      <% if (!@flash.nil? && defined? @flash) %>
        <% @flash.each do |key, msg| %>
          <div id="<%= "flash_#{key}" %>" class="flashy"><%= msg %></div>
        <% end %>
      <% end %>
    </div>
    <article>
      <%= yield %>
    </article>
    <br clear="all" />
  </div>
  <footer>
    <div class="wrapper">
      I'm a footer
    </div>
  </footer>
</body>
</html>
